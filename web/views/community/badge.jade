extends layout

block settings
	- var extendedHeader = true

block content
	.container.text-white
		.mikuia-page-padding
			.row.animation-fade-in-down
				.col-md-12
					.media.mikuia-page-header-text
						.pull-left
							img.img-circle.media-object(src='/img/badges/' + badgeId + '.png', width='100', height='100')
						.media-body.profile-name
							h1.media-heading
								| #{Badge.displayName}
							small=Badge.description
	.container
		.row.animation-fade-in-up
			.col-md-12.mikuia-page-card
				.pull-right
					h2!=Mikuia.Tools.colorRarity(Badge.rarity)
				h2
					if members.length == 1
						| 1 user has this badge 
					else
						| #{members.length} users have this badge 
					| (out of #{uniqueChatters})
					
				br
				.row
					each memberName in members
						- var member = memberData[memberName]
						.col-md-3
							a(href='/user/' + memberName)
								.well.well-sm
									.media
										.pull-left
											img.img-circle.media-object(src=member.logo, width='32', height='32')
										.media-body
											span.media-heading=member.displayName
