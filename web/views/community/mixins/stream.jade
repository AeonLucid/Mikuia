mixin stream(stream, displayHtml, sortValue)
	if stream
		a(href='http://twitch.tv/' + stream.display_name.toLowerCase(), target='_blank')
			.mikuia-stream.col-md-3(style='background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.1), rgba(32, 20, 73, 0.8)), url(\'' + stream.preview + '\');')
				.mikuia-stream-flag
					img(src='/img/flags/' + stream.broadcaster_language + '.png')
				.mikuia-stream-lb!=displayHtml.replace('<%value%>', sortValue)
				.mikuia-stream-details
					| #{stream.status}
					.mikuia-stream-details-user
						img.mikuia-stream-details-user-avatar(src='/img/avatars/' + stream.display_name.toLowerCase() + '.jpg', width='16', height='16')
						.mikuia-stream-details-user-name
							span.text-white=stream.display_name
							small  playing #{stream.game}
