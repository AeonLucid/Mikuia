mixin userHeader(Channel)
	.splash.profile(style=(Channel.profileBanner != null && Channel.profileBanner != 'null' ? 'background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url(\'' + Channel.profileBanner + '\'); background-position: center; background-repeat: no-repeat; background-size: cover;' : undefined))
		//- .avatars
		//- 	ul
		//- 		each avatarFile in Mikuia.Tools.getAvatars(500)
		//- 			li
		//- 				img(src='/img/avatars/' + avatarFile, width='64', height='64')
		.container
			.row
				.col-md-12
					.media
						.pull-left
							img.img-circle.media-object(src=Channel.logo, width='120', height='120')
						.media-body.profile-name
							h1.media-heading
								| #{Channel.display_name}

								.pull-right
									+level(Channel.level)