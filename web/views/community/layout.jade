include mixins/level
include mixins/levelOverview
include mixins/levelProgress
include mixins/stream
include mixins/userHeader

doctype html
html
	head
		link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all', rel='stylesheet', type='text/css')
		link(href='/assets/global/plugins/font-awesome/css/font-awesome.min.css', rel='stylesheet', type='text/css')
		link(href='//maxcdn.bootstrapcdn.com/bootswatch/3.3.5/yeti/bootstrap.min.css', rel='stylesheet', type='text/css')
		link(href='/css/mikuia.css', rel='stylesheet', type='text/css')
		title=Mikuia.settings.bot.name
	body(class=(path == '/' ? 'mikuia' : undefined))
		nav.navbar.navbar-default.navbar-fixed-top.navbar-mikuia.animation-fade-in-down(role='navigation')
			.container
				.navbar-header
					a.navbar-brand(href='/')=Mikuia.settings.bot.name

				.collapse.navbar-collapse
					ul.nav.navbar-nav#links
						li(class=(path == '/streams' ? 'active' : undefined))
							a(href='/streams')
								i.fa.fa-video-camera
								|  Streams
						li(class=(path.indexOf('/levels') == 0 ? 'active' : undefined))
							a(href='/levels')
								i.fa.fa-star-o
								|  Levels
						li(class=(path.indexOf('/guide') == 0 ? 'active' : undefined))
							a(href='/guide')
								i.fa.fa-book
								|  Guide
						li(class=(path == '/supporter' ? 'active' : undefined))
							a(href='/supporter')
								i.fa.fa-money
								|  Supporter
						li.dropdown(class=(path == '/leagues' ? 'active' : undefined))
							a.dropdown-toggle(href='#', data-toggle='dropdown')
								i.fa.fa-trophy
								|  Leagues 
								span.caret
							ul.dropdown-menu(role='menu')
								li
									a(href='/leagues') Your Rank
								li
									a(href='/leagues/leaderboards') Leaderboards
						li(class=(path.indexOf('/slack') == 0 ? 'active' : undefined))
							a(href='/slack')
								i.fa.fa-slack
								|  Slack
						li
							a(href='https://p.datadoghq.com/sb/AF-ona-ccd2288b29')
								i.fa.fa-bar-chart
								|  Status
						li
							a(href='http://support.mikuia.tv')
								i.fa.fa-life-ring
								|  Support
					ul.nav.navbar-nav.navbar-right.pull-right
						li#search
							a(href='#')
								i.fa.fa-search
						if !user
							li
								a(href='/auth/twitch') Login with Twitch
						else
							li.dropdown
								a.dropdown-toggle(href='#', data-toggle='dropdown')
									img.img-circle(src='/img/avatars/' + user.username + '.jpg', width='18', height='18')
									|  #{user._json.display_name} 
									span.caret
								ul.dropdown-menu(role='menu')
									li
										a(href='/user/' + user.username) Profile
									li
										a(href='#') Inventory
									li
										a(href='/dashboard') Dashboard
									li
										a(href='/logout') Logout
					form.navbar-form.navbar-left.pull-right#search-bar(role='search', style='display: none;')
						.form-group
							input.form-control#search-field(type='text', autocomplete='off', data-provide="typeahead", placeholder='Search')
		block content
		.container.animation-fade-in-up
			hr
			.row
				.col-md-3
				.col-md-3
				.col-md-3
					small.text-muted
						b Art by 
						a(href='http://pixiv.me/cillia') cillia 
						|  <3
				.col-md-3
					small.text-muted
						a(href='/about') About Mikuia
						br
						a(href='http://support.mikuia.tv') Support
						br
						a(href='http://reddit.com/r/cats') Cats
		br
		block footerScript
		script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js')
		script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/jquery-timeago/1.4.0/jquery.timeago.min.js')
		script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/moment.js/2.8.4/moment.min.js')
		script(type='text/javascript', src='/js/bootstrap3-typeahead.min.js')
		script(type='text/javascript', src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
		script(type='text/javascript', src='/socket.io/socket.io.js')
		script(type='text/javascript').
			$('[rel=tooltip]').tooltip({
				container: 'body',
				html: true
			})
			$('.timeago').timeago()

			$('#search').click(function() {
				$('#links').toggle()
				$('#search-bar').toggle()
				$('#search-field').focus()
			})

			$('#search-field').typeahead({
				delay: 250,
				items: 5,
				minLength: 1,
				source: function(query, process) {
					$.post('/search', {
						type: 'username-completion',
						query: query
					}).success(function(result) {
						process(JSON.parse(result))
					})
				},
				afterSelect: function(item) {
					window.location = '/user/' + item.toLowerCase()
				}
			})

