include mixins/level
include mixins/levelOverview
include mixins/levelProgress
include mixins/stream
include mixins/userHeader

doctype html
html
	head
		link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all', rel='stylesheet', type='text/css')
		link(href='/assets/global/plugins/font-awesome/css/font-awesome.min.css', rel='stylesheet', type='text/css')
		link(href='//maxcdn.bootstrapcdn.com/bootswatch/3.2.0/yeti/bootstrap.min.css', rel='stylesheet', type='text/css')
		link(href='/css/mikuia.css', rel='stylesheet', type='text/css')
		title Mikuia Append
	body(class=(path == '/' ? 'mikuia' : undefined))
		nav.navbar.navbar-default.navbar-fixed-top.navbar-mikuia(role='navigation')
			.container
				.navbar-header
					a.navbar-brand(href='/')
						| Mikuia 
						small(style='font-size: 12px; top: 0px;') Append

				.collapse.navbar-collapse
					ul.nav.navbar-nav
						li(class=(path == '/' ? 'active' : undefined))
							a(href='/') Home
						li(class=(path == '/streams' ? 'active' : undefined))
							a(href='/streams') Streams
						li(class=(path.indexOf('/levels') == 0 ? 'active' : undefined))
							a(href='/levels') Levels
						li
							a(href='http://forums.mikuia.tv') Forums
						li
							a(rel='tooltip', data-placement='bottom' href='https://www.paypal.com/cgi-bin/webscr?cmd=_donations&business=psqmaxor%40gmail%2ecom&lc=GB&item_name=Mikuia&currency_code=USD&bn=PP%2dDonationsBF%3abtn_donate_SM%2egif%3aNonHosted', title='Stahp! If you donate at least $10, you are eligible for a badge! Just please add your Twitch name in the message! :3') Donate
					if !user
						ul.nav.navbar-nav.navbar-right.pull-right
							li
								a(href='/auth/twitch') Login with Twitch
					else
						ul.nav.navbar-nav.navbar-right.pull-right
							li.dropdown
								a.dropdown-toggle(href='#', data-toggle='dropdown')
									img.img-circle(src='/img/avatars/' + user.username + '.jpg', width='18', height='18')
									|  #{user._json.display_name} 
									span.caret
								ul.dropdown-menu(role='menu')
									li
										a(href='/user/' + user.username) Profile
									li
										a(href='/dashboard') Dashboard
									li
										a(href='/logout') Logout
					p.navbar-text.navbar-right#ticker This is a random chat ticker!
		block content
		.container
			hr
			.row
				.col-md-3
				.col-md-3
				.col-md-3
				.col-md-3
					small.text-muted
						b Made by:
						br
						| Maxorq / Hatsuney
						br
						| Pasteleft 2013-2014
		br
		block footerScript
		script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js')
		script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/jquery-timeago/1.4.0/jquery.timeago.min.js')
		script(type='text/javascript', src='//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js')
		script(type='text/javascript', src='/socket.io/socket.io.js')
		script(type='text/javascript').
			$('[rel=tooltip]').tooltip({
				container: 'body'
			})
			$('.timeago').timeago()

			var socket = io.connect()
			socket.on('ticker', function(message) {
				$('#ticker').fadeOut(1000, 'swing', function() {
					$('#ticker').html(message)
					$('#ticker').fadeIn()
				})
			})