	body.page-header-fixed.page-quick-sidebar-over-content
		.navbar.navbar-fixed-top.page-header
			.page-header-inner
				.page-logo
					a.navbar-brand(href='/') Mikuia Append
					.menu-toggler.sidebar-toggler.hide
				a.menu-toggler.responsive-toggler(href='#', data-toggle='collapse', data-target='.navbar-collapse')
				.top-menu
					ul.nav.navbar-nav.pull-right
						li.dropdown.dropdown-user
							a.dropdown-toggle(href='#', data-toggle='dropdown', data-hover='dropdown', data-close-others='true')
								img.img-circle(src=user._json.logo, width='23', height='23')
								span.username=user._json.display_name
								i.fa.fa-angle-down
							ul.dropdown-menu
								li
									a(href='/user/' + user.username)
										i.icon-user
										|  Profile
								li
									a(href='/logout')
										i.icon-key
										|  Logout
		.clearfix
		.page-container
			.page-sidebar-wrapper
				.page-sidebar.navbar-collapse.collapse
					ul.page-sidebar-menu(data-auto-scroll='true', data-slide-speed='200')
						li.sidebar-toggler-wrapper
							.sidebar-toggler
						br
						li(class=(path == '/dashboard' ? 'active' : undefined))
							a(href='/dashboard')
								i.icon-home
								span.title Dashboard
								if path == '/dashboard'
									span.selected
						li(class=(path == '/dashboard/settings' ? 'active' : undefined))
							a(href='/dashboard/settings')
								i.icon-settings
								span.title Settings
								if path == '/dashboard/settings'
									span.selected
						li(class=(path == '/dashboard/commands' ? 'active' : undefined))
							a(href='/dashboard/commands')
								i.icon-settings
								span.title Commands
								if path == '/dashboard/commands'
									span.selected
						each page in pages
							li(class=(path == page.path ? 'active' : undefined))
								a(href=page.path)
									i(class=page.icon)
									span.title=page.name
									if path == page.path
										span.selected
			.page-content-wrapper
				.page-content
					block content

