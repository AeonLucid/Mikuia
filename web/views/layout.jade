	body.page-md.page-header-static.page-quick-sidebar-over-content.page-sidebar-closed-hide-logo
		.navbar.navbar-static-top.page-header.md-shadow-z-1-i
			.page-header-inner
				.page-logo
					a.navbar-brand.navbar-dashboard(href='/')=Mikuia.settings.bot.name
					.menu-toggler.sidebar-toggler
				a.menu-toggler.responsive-toggler(href='#', data-toggle='collapse', data-target='.navbar-collapse')
				.page-top
					.top-menu
						ul.nav.navbar-nav.pull-right
							li.dropdown.dropdown-user.dropdown-dark
								a.dropdown-toggle(href='#', data-toggle='dropdown', data-hover='dropdown', data-close-others='true')
									span.username=user._json.display_name
									img.img-circle(src=user._json.logo, width='39', height='39')
								ul.dropdown-menu.dropdown-menu-default
									li
										a(href='/user/' + user.username)
											i.icon-user
											|  Profile
									li
										a(href='/logout')
											i.icon-key
											|  Logout
		.clearfix
		.page-container
			.page-sidebar-wrapper
				.page-sidebar.navbar-collapse.collapse.md-shadow-z-2-i
					ul.page-sidebar-menu(data-auto-scroll='true', data-slide-speed='200')
						li.sidebar-toggler-wrapper
							.sidebar-toggler
						li(class=(path == '/dashboard' ? 'active' : undefined))
							a(href='/dashboard')
								i.icon-home
								span.title Dashboard
								if path == '/dashboard'
									span.selected
						li(class=(path == '/dashboard/settings' ? 'active' : undefined))
							a(href='/dashboard/settings')
								i.icon-settings
								span.title Settings
								if path == '/dashboard/settings'
									span.selected
						li(class=(path == '/dashboard/commands' ? 'active' : undefined))
							a(href='/dashboard/commands')
								i.icon-settings
								span.title Commands
								if path == '/dashboard/commands'
									span.selected
						each page in pages
							li(class=(path == page.path ? 'active' : undefined))
								a(href=page.path)
									i(class=page.icon)
									span.title=page.name
									if path == page.path
										span.selected
			.page-content-wrapper
				.page-content
					block content

		script(src='/assets/global/scripts/metronic.js', type='text/javascript')
		script(src='/assets/admin/layout4/scripts/layout.js', type='text/javascript')
		script(src='/assets/admin/pages/scripts/index.js', type='text/javascript')
		script(src='/assets/admin/pages/scripts/tasks.js', type='text/javascript')
		script(src='/assets/global/plugins/uniform/jquery.uniform.min.js', type='text/javascript')

		script(type='text/javascript').
			$(document).ready(function() {
				Metronic.init()
				Layout.init()
				Index.init()
				$('[rel=tooltip]').tooltip()
			})

